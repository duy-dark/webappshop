{{#section 'css'}}
            <link rel="stylesheet" type="text/css" href="/assets/SanPhamTheoHang.css">
    <link rel="stylesheet" type="text/css" href="/assets/quan-li-hoa-don-hang.css">
{{/section}}

{{#section 'js'}}
    <script type="text/javascript" src="/assets/thongTinChiTietSanPham.js"></script>
    <script type="text/javascript">
        $("input").attr('disabled',true);
        $("select").attr('disabled',true);
    </script>
{{/section}}

    <div class="link">
        <a href="/dash-board"> <span >  DashBoard</span></a>     
        <a href="/dash-board/quan-li-khach-hang"> <span >  Quản lí thông tin khách hàng</span></a>
        Chi tiết khách hàng
    </div>
    {{#with acc}}
    <div id="User-content">
        <div id="User-Avatar" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <div id="user-image">
                <div style="margin-bottom: 80px;">
                    <img src="/assets/image/background-avatar.png">
                </div>
                 <img style="width: 150px; height: 150px;" src="/assets/image/Avatar/{{MAKH}}.jpg">
                 <a href="#">
                     <span class="glyphicon glyphicon-camera" style="color: black;"></span>
                 </a>  
            </div>           
            <div id="user-type">
                <a href="#">{{USERNAME}}</a>
                <p>VIP</p>
            </div>   
        </div>
        <div id="User-Infor" class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
            <form>
                <div id="Infor-Content">
                    
                    <div id="Account-Infor">
                        THÔNG TIN TÀI KHOẢN
                        <div>
                            <label>Username:</label>
                            <input type="text" name="usname" value="{{USERNAME}}">
                        </div>
                    </div>
                    <div id="Personal-Infor">
                        THÔNG TIN KHÁCH HÀNG
                        <div>
                            <label>Họ Tên:</label>
                            <input type="text" name="truename" value="{{TEN}}">
                        </div>
                        <div>
                            <label>Ngày Sinh:</label>
                            <input type="date" name="dob" placeholder="NGAYSINH" value="{{time_format NGAYSINH}}">
                        </div>
                        <div>
                            <label>Giới Tính:</label>
                            <select name="gender">
                                <option value="1">{{GIOITINH}}</option>
                            </select>
                        </div>
                        <div>
                            <label>Địa Chỉ:</label>
                            <input type="text" name="address" placeholder="Address city/district/town" value="{{DCHI}}">
                        </div>
                        <div>
                            <label>Số Điện Thoại:</label>
                            <input type="text" name="phonenumber" value="{{DTHOAI}}">
                        </div>
                        <div>
                            <label>Email:</label>
                            <input type="text" name="email" value="{{EMAIL}}">
                        </div>
                        <div>
                            <label>CMND:</label>
                            <input type="text" name="personalid" value="{{CMND}}">
                        </div> 
                    </div>
                    {{/with}}
                    <div id="button">
                        <button style="margin-left:245px;color:green;">
                            Chặn quyền truy cập
                        </button>
                        <button style="margin-left: 10px;color:green;">
                            Gửi tin nhắn
                        </button>
                    </div>
                </div>
            </form>
            <div id="history-orders">
                <p><b>CÁC ĐƠN HÀNG ĐÃ ĐẶT MUA</b></p>
                <div id="order-content">
                    {{#each orders}}
                    <div id="order" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <a href="/dash-board/quan-li-hoa-don-hang/thong-tin-chi-tiet-hoa-don-hang?id={{IDHD}}">
                            <div>
                                <ul id="order-id" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    {{IDHD}}
                                </ul>
                                <ul id="order-id" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    {{time_format NGAYDATHANG}}
                                </ul>
                                <ul id="order-id" class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    {{TINHTRANG}}
                                </ul>
                                <span class="glyphicon glyphicon-search"></span>
                            </div>
                        </a>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>